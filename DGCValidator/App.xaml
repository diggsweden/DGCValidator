<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DGCValidator.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="Title" TargetType="Label">
                <Setter Property="TextColor" Value="#444444"/>
                <Setter Property="FontSize" Value="36"/>
            </Style>
            <Style x:Key="SubTitle" TargetType="Label">
                <Setter Property="TextColor" Value="#444444"/>
                <Setter Property="FontSize" Value="26"/>
            </Style>
            <Style x:Key="Text" TargetType="Label">
                <Setter Property="TextColor" Value="#444444"/>
                <Setter Property="FontSize" Value="Medium"/>
            </Style>
            <Style x:Key="Link" TargetType="Label">
                <Setter Property="TextColor" Value="#444444"/>
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="TextDecorations" Value="Underline"/>
            </Style>
            <Style x:Key="LargeText" TargetType="Label">
                <Setter Property="TextColor" Value="#444444"/>
                <Setter Property="FontSize" Value="Large"/>
                <Setter Property="FontAttributes" Value="Bold"/>
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>